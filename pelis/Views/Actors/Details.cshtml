@model pelis.Models.Actor

@{
    ViewData["Title"] = Model.FullName;
}

<h2>@Model.FullName</h2>
<h3>Starring in: </h3>
<ul>
@foreach(var movie in Model.Movies)
{
    <li>@($"{movie.Title} ({movie.ReleaseYear})")</li>
}
</ul>
<h3>Add movie to Actor:</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMovieToActor">
            <div class="form-group">
                <select asp-for="SelectedMovieId" class="form-control">
                @foreach (var movie in Model.AllMovies)
                {
                <option value="@movie.ID">@movie.Title</option>
                }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add movie to actor" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>